datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id          Int       @id @default(autoincrement())
  name        String
  email       String    @unique
  userTypeId  Int       
  userType    UserType  @relation(fields: [userTypeId], references: [id])
}

model UserType {
  id          Int       @id @default(autoincrement())
  description String
  users       User[]   
}

model Trips {
  id          Int       @id @default(autoincrement())
  from        String
  destination String
  date        DateTime
  value       Decimal 
}